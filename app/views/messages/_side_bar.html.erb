<div class="top_box">
  <div class="name_box">
     <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="chat_make">
    <%= link_to 'チャットを作成する', new_room_path%>
  </div>
</div>

<div class="room_box">
  <% current_user.rooms.each do |r| %> 
    <div class="chat_room">
      <div class="room-name">
        <a href="#"><%= r.name %></a>
      </div>  
    </div>
  <% end %>
</div>